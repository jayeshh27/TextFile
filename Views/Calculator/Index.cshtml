@model myMvcApp.Models.CalculatorModel
@{
    ViewData["Title"] = "Calculator";
}

<h2>Simple Calculator</h2>

<form method="post">
    <div>
        <label>Number 1:</label>
        <input type="number" step="any" name="Number1" value="@Model?.Number1" required />
    </div>
    <div>
        <label>Number 2:</label>
        <input type="number" step="any" name="Number2" value="@Model?.Number2" required />
    </div>
    <div>
        <label>Operation:</label>
        <select name="Operation">
            <option value="+">+</option>
            <option value="-">-</option>
            <option value="*">*</option>
            <option value="/">/</option>
        </select>
    </div>
    <div>
        <button type="submit">Calculate</button>
    </div>

    @if (Model?.Result != null)
    {
        <div>
            <strong>Result: @Model.Result</strong>
        </div>
    }
</form>
